                            <label class="col-form-label" for="accommodation_cost_w2">Accommodation Cost</label>
                            <label class="col-form-label" for="compensation_cost_w2">Compensation Cost</label>
                            <label class="col-form-label" for="social_security_w2">Social Security</label>
                        </div>
                        <div class="col-7">
                            <input id="labor_cost_w2" class="form-control" type="number" />
                            <input id="ot_cost_w2" class="form-control" type="number" />
                            <input id="accommodation_cost_w2" class="form-control" type="number" />
                            <input id="compensation_cost_w2" class="form-control" type="number" />
                            <input id="social_security_w2" class="form-control" type="number" />
                        </div>
                        <div class="col-1">
                            <label class="col-form-label">BAHT</label>
                            <label class="col-form-label">BAHT</label>
                            <label class="col-form-label">BAHT</label>
                            <label class="col-form-label">BAHT</label>
